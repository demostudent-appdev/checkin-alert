 <div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new flight
    </h2>

    <form action="/insert_flight" method="post">
      <div class="form-group">
        <label for="description_box">
          Description
        </label>
        <input type="text" id="description_box" name="description_from_query" class="form-control">
      </div>
      <div class="form-group">
        <label for="departs_at_box">
          Departs at
        </label>
        <input type="datetime-local" id="departs_at_box" name="departs_at_from_query" class="form-control">
      </div>
      <button class="btn btn-block btn-outline-secondary">
        Create flight
      </button>
    </form>
  </div>
</div>

<div class="row mb-3">
	<div class="col-lg-8 offset-lg-2">
    <div class="card">
      <div class="card-header h6 py-3 text-uppercase">
        Upcoming flights
      </div>

      <!-- Do for every past flights -->
      <% @upcoming_flights.each do |flight| %>
      <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex align-items-center justify-content-between">
            <div>
              Departs for <%= flight.description%> at <%= flight.departs_at.to_s%>
            </div>
            <% if !flight.message_sent%>
            <!-- Alert NOT yet sent -->
            <div>
                <span class="badge badge-danger">
                  <i class="fas fa-fw fa-stopwatch"></i>
                  Alert not yet sent
                </span>
              <a href="/delete_flight/<%= flight.id%>">
                <i class="far fa-fw fa-trash-alt"></i>
              </a>
            </div>
            <% end %>
            <% if flight.message_sent %>
            <!-- Alert sent -->
            <div>
                <span class="badge badge-success">
                <i class="fas fa-fw fa-check-circle"></i>
                  Alert sent
                </span>
              <a href="/delete_flight/<%= flight.id%>">
                <i class="far fa-fw fa-trash-alt"></i>
              </a>
            </div>
            <% end %>
          </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>


